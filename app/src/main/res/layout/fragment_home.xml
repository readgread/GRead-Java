<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview_commas"
        android:layout_marginTop="8dp"
        android:onClick="onClickCommasCard"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#ffffff"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="68dp"
                android:layout_height="68dp"
                card_view:placeholderImage="@drawable/comma"
                card_view:placeholderImageScaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Commas and Halfstrokes"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview_scrawled"
        android:layout_marginTop="8dp"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#ffffff"
        android:clickable="true"
        android:onClick="onClickScrawledCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="68dp"
                android:layout_height="68dp"
                card_view:placeholderImage="@drawable/scrawled"
                card_view:placeholderImageScaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Scrawled Stories"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview_readers"
        android:layout_marginTop="8dp"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#ffffff"
        android:clickable="true"
        android:onClick="onClickReadersCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="68dp"
                android:layout_height="68dp"
                card_view:placeholderImage="@drawable/reader"
                card_view:placeholderImageScaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Reader's Guild"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>